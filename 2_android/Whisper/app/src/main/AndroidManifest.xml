<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.valorachen.whisper">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:label="@string/ttWrite" android:name=".activity.WriteActivity"/>
        <activity android:label="@string/ttReWrite" android:name=".activity.ReWriteActivity"/>
        <activity android:label="@string/ttType" android:name=".activity.TypeActivity"/>
        <activity android:label="@string/ttSetting" android:name=".activity.SettingActivity"/>
        <activity android:label="@string/ttSetting" android:name=".activity.ArticleActivity"/>
    </application>

</manifest>